<?xml version="1.0" encoding="UTF-8"?>
<server>
	<service>
		<connector port="8080" maxThread="100" protocol="HTTP/1.1"></connector>
		<webroot>WebContent</webroot>
		<not-found-page>404.html</not-found-page>
	</service>
	<!-- 配置响应的数据类型 -->
	<type-mappings>
	<type-mapping ext="html" type="text/html"></type-mapping>
	<type-mapping ext="jpg" type="image/jpeg"></type-mapping>
	<type-mapping ext="png" type="image/png"></type-mapping>
	<type-mapping ext="js" type="application"></type-mapping>
	<type-mapping ext="ico" type="image/ico"></type-mapping>
	</type-mappings>
</server>